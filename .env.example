# LearnPilot Environment Configuration
# Copy this file to .env and update with your actual values

# ==================== DATABASE ====================
# Database URL - for SQLite use: sqlite:///path/to/database.db
DATABASE_URL=sqlite:///user_data/papers.db

# ==================== SECURITY ====================
# JWT Secret Keys - Generate secure random strings in production
JWT_SECRET_KEY=your-super-secret-jwt-key-here
ADMIN_JWT_SECRET_KEY=your-super-secret-admin-jwt-key-here

# Token expiration times (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30 days
ADMIN_TOKEN_EXPIRE_MINUTES=480     # 8 hours

# Password hashing settings
BCRYPT_ROUNDS=12

# ==================== EMAIL CONFIGURATION ====================
# SMTP server settings for notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email display settings
FROM_EMAIL=noreply@learnpilot.com
FROM_NAME=LearnPilot

# ==================== APPLICATION SETTINGS ====================
# Application URLs (used in email templates)
APP_URL=http://localhost:8000
ADMIN_PANEL_URL=http://localhost:8000/admin
LOGIN_URL=http://localhost:8000/login

# API Settings
API_RATE_LIMIT=100  # requests per minute per IP

# ==================== AI/ML CONFIGURATION ====================
# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048

# Perplexity API (if used)
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# ==================== LOGGING ====================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file settings
LOG_FILE_PATH=logs/learnpilot.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ==================== CORS SETTINGS ====================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://learnpilot.com

# ==================== FILE STORAGE ====================
# Upload settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=.pdf,.md,.txt

# Storage paths
UPLOAD_DIR=user_data/uploads
TEMP_DIR=user_data/temp

# ==================== MONITORING ====================
# Enable metrics collection
ENABLE_METRICS=true

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

# ==================== DEVELOPMENT SETTINGS ====================
# Development mode settings
DEBUG=false
RELOAD=false

# Mock email delivery (for testing)
MOCK_EMAIL=false

# ==================== ADMIN DEFAULT SETTINGS ====================
# Default super admin credentials (change immediately after first setup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@learnpilot.com
DEFAULT_ADMIN_NAME=System Administrator

# ==================== APPROVAL WORKFLOW SETTINGS ====================
# Automatic approval settings
AUTO_APPROVE_DOMAINS=company.com,university.edu  # Comma-separated list of trusted domains
AUTO_APPROVE_ENABLED=false

# Notification settings
NOTIFY_ADMINS_NEW_REGISTRATION=true
NOTIFY_USER_APPROVAL=true
SEND_WELCOME_EMAIL=true

# Approval timeout (days after which pending registrations are automatically rejected)
APPROVAL_TIMEOUT_DAYS=30